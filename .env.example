# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
APP_ENV=local

# -----------------------------------------------------------------------------
# MySQL Configuration
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password

# -----------------------------------------------------------------------------
# WordPress Configuration
# -----------------------------------------------------------------------------
WORDPRESS_TABLE_PREFIX=eds_

# -----------------------------------------------------------------------------
# WordPress Security Keys & Salts
# Generate real values from:
# https://api.wordpress.org/secret-key/1.1/salt/
# -----------------------------------------------------------------------------
AUTH_KEY=put_unique_phrase_here
SECURE_AUTH_KEY=put_unique_phrase_here
LOGGED_IN_KEY=put_unique_phrase_here
NONCE_KEY=put_unique_phrase_here
AUTH_SALT=put_unique_phrase_here
SECURE_AUTH_SALT=put_unique_phrase_here
LOGGED_IN_SALT=put_unique_phrase_here
NONCE_SALT=put_unique_phrase_here

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
WP_PORT=8081
NODE_PORT=3000
PMA_PORT=8082
MAIL_UI_PORT=8025
MAIL_SMTP_PORT=1025